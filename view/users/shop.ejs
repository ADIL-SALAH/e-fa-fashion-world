                        <i class="fas fa-heart text-primary"></i>
                        <span class="badge">0</span>
                    </a>
                    <a href="/cart" class="btn border">
                        <i class="fas fa-shopping-cart text-primary"></i>
                        <span class="badge">0</span>
                    </a>
                    <button href="" class="btn border">
                        <i class="fa-solid fa-wallet text-primary"></i> <span class="badge">
                            <%= walletAmount %>
                        </span>
                    </button>
                </div>
            </div>
        </div>
        <!-- Topbar End -->



        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="modal-box">
