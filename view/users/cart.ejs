        <script>
            // Decrement function
            const minus = function (id) {
                console.log('hftvftfv');
                $.ajax({
                    type: "post",
                    url: "/decrement",
                    contentType: 'application/json',
                    data: JSON.stringify({
                        id: id
                    }),
                    success: function (datas) {
                        if (datas.productid == id) {
                            $(`#${id}p`).text(datas.total1)
                            $(`#total`).text(datas.grandTotal1)
                            $(`#${id}quantity`).val(datas.dQuantity)
                            $(`#netTotal`).text(datas.grandTotal1)
                            if (datas.dQuantity <= 1) {
                                function btnDisable() {
                                    // disable the button
                                    const disableMinusButton1 = document.getElementById("minusButton1" + id);
                                    const disableMinusButton2 = document.getElementById("minusButton2" + id);
                                    disableMinusButton1.disabled = true

                                    if (disableMinusButton1.disabled == false) {
                                        disableMinusButton1.disabled = true

                                    }
                                    if (disableMinusButton2.disabled == false) {
                                        disableMinusButton2.disabled = true

                                    }
                                }
                                btnDisable()
                            }

                        }

                        console.log(datas + ",,,,,,,,,,,,,,,");
                    }
                })
            }

            // Increment function
            const plus = function (id, stock) {
                const quantity = $(`#${id}quantity`).val()
                console.log(quantity, stock, 'OOOOOOOOOOOOOOOOOOOOOOOOOO');
                if (Number(quantity) <= Number(stock) - 1) {
                    console.log(quantity, stock, "TTTTTTTTTTTTTTTTTTTTTTTT");
                    $.ajax({
                        type: "post",
                        url: "/increment",
                        dataType: 'json',
                        contentType: 'application/json',
                        data: JSON.stringify({ id: id }),
                        success: function (data) {
                            console.log(data);
                            if (data.productid == id) {
                                $(`#${id}p`).text(data.total1)
                                $(`#total`).text(data.grandTotal1)
                                $(`#${id}quantity`).val(data.quantity)
                                $(`#netTotal`).text(data.grandTotal1)
                                if (data.quantity > 1) {
                                    function btnActive() {
                                        // disable the button
                                        const activeMinusButton1 = document.getElementById("minusButton1" + id);
                                        const activeMinusButton2 = document.getElementById("minusButton2" + id);
                                        if (activeMinusButton1.disabled == true) {
                                            activeMinusButton1.disabled = false
                                        }
                                        if (activeMinusButton2.disabled == true) {
                                            activeMinusButton2.disabled = false
                                        }

                                    }
                                    btnActive()
                                }

                            }
                            console.log(data);
                        }
                    })


                } else {
                    $('#stockOut').modal('show');
                }
            }


        </script>


