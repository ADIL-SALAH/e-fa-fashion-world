        <script type="text/javascript" src="https://unpkg.com/xlsx@0.15.1/dist/xlsx.full.min.js"></script>
        <script>
            function ExportToExcel(type, fn, dl) {
                var elt = document.getElementById("salesTable");
                var wb = XLSX.utils.table_to_book(elt, { sheet: "sheet1" });
                return dl ?
                    XLSX.write(wb, { bookType: type, bookSST: true, type: 'base64' }) :
                    XLSX.writeFile(wb, fn || ('MySheetName.' + (type || 'xlsx')));
            }
            function printTable() {
                var table = document.getElementById("salesTable");
                if (!table) {
                    console.error("Table element not found.");
                    return;
                }
                var newWin = window.open('', 'Print-Window');
                if (!newWin) {
                    console.error("Could not open print window.");
                    return;
                }
                newWin.document.open();
                newWin.document.write('<html><body onload="window.print()">' + table.outerHTML + '</html>');
                newWin.document.close();
                setTimeout(function () {
                    if (!newWin.closed) {
                        newWin.close();
                    }
                }, 1000);
            }
            function validateDates() {
                var firstDate = new Date(document.getElementsByName('first')[0].value);
                var lastDate = new Date(document.getElementsByName('last')[0].value);
                if (firstDate > lastDate) {
                    swal({
                        title: "Error",
                        text: "The first date must be earlier than the second date.",
                        icon: "error",
                        button: "OK",
                    });
                    return false;
                }
                return true;
            }

        </script>
