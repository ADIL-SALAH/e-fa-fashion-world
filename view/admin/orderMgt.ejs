        <div id="page">

            <div class="container">
                <div class="mt-5 ">
                    <h4></h4>
                </div>
            </div>
            <section class="mt-5 mb-5">
                <div class="container">
                    <div class="row">
                        <div class="col-12">
                            <table class="table table-striped" id="user-table" style="box-shadow: 4px 4px 4px 4px;">
                                <thead class="bg-secondary text-light">
                                    <tr>

                                        <th scope="col">sl.no</th>
                                        <th scope="col">Order ID </th>

                                        <th scope="col">Orderd Date</th>

                                        <th scope="col">Total Bill</th>
                                        <th scope="col">Payment Method</th>
                                        <th scope="col">Status</th>
                                        <th scope="col">Details</th>


                                    </tr>
                                </thead>
                                <tbody class="bg-light">

                                    <%for( let i=0; i <ordersList.length; i++ ) { %>


                                        <tr>
                                            <td>
                                                <div class="text-secondary">
                                                    <%=i+1+(currentPage*limit-limit)%>
                                                </div>
                                            </td>

                                            <td>

                                                <div class="text-secondary">
                                                    <h6 class="text-primary">Order ID :</h6>
                                                    <%=ordersList[i]._id%>
                                                </div>




                                            </td>

                                            <td>

                                                <div class="mt-3 text-secondary">
                                                    <%=ordersList[i].date.toLocaleDateString()%>
                                                </div>

                                            </td>
                                            <td>
                                                <div class="text-secondary">
                                                    â‚¹ <%=ordersList[i].net_total %>
                                                </div>

                                            </td>

                                            <td>
                                                <div class="text-secondary">
                                                    <%=ordersList[i].payment_method %>
                                                </div>
                                            </td>
                                            <td>
                                                <div>
                                                    <% if(ordersList[i].status=="Order Confirmed" ){%>
                                                        <div class="text-info">
                                                            <%=ordersList[i].status %>
                                                        </div>
                                                        <%}else if(ordersList[i].status=="Order Cancelled" ){%>
                                                            <div class="text-danger">
                                                                <%=ordersList[i].status %>
                                                            </div>
                                                            <%}else if(ordersList[i].status=="Order Returned" ){%>
                                                                <div class="text-warning">
                                                                    <%=ordersList[i].status %>
                                                                </div>
                                                                <%}else if(ordersList[i].status=="Order Delivered" ){%>
                                                                    <div class="text-success">
                                                                        <%=ordersList[i].status %>
                                                                    </div>
                                                                    <%}else if(ordersList[i].status=="Order Shipped"
                                                                        ){%>
                                                                        <div class="text-primary">
                                                                            <%=ordersList[i].status %>
                                                                        </div>
                                                                        <%}%>
                                                </div>

                                            </td>
                                            <td>
                                                <a href=" /admin/orderDetailsMgt?orderid=<%=ordersList[i]._id%>"
                                                    class=" btn btn-sm bg-secondary text-light">Details</a>
                                            </td>
                                        </tr>
                                        <% } %>
                                </tbody>
                            </table>



                        </div>
                    </div>
            </section>
            <div class="col-12 pb-1">
                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-center mb-3">
                        <% if(currentPage>1){ %>
                            <li class="page-item">
                                <a class="page-link" href="/admin/orderMgt?pageno=<%= currentPage-1 %>"
                                    aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                    <span class="sr-only">Previous</span>
                                </a>
                            </li>
                            <% } %>


                                <% for(j=1;j<=totalPage;j++){ %>
                                    <% if(currentPage==j){ %>
                                        <li class="page-item nav active"><a class="page-link"
                                                href="/admin/orderMgt?pageno=<%= j %>">
                                                <%= j %>
                                            </a></li>
                                        <% }else{ %>
                                            <li class="page-item"><a class="page-link"
                                                    href="/admin/orderMgt?pageno=<%= j %>">
                                                    <%= j %>
                                                </a></li>
                                            <% } %>
                                                <% } %>

                                                    <% if(currentPage<totalPage) {%>
                                                        <li class="page-item">
                                                            <a class="page-link"
                                                                href="/admin/orderMgt?pageno=<%= parseInt (currentPage)+1 %>"
                                                                aria-label="Next">
                                                                <span aria-hidden="true">&raquo;</span>
                                                                <span class="sr-only">Next</span>
                                                            </a>
                                                        </li>
                                                        <% } %>



                    </ul>
                </nav>
            </div>


